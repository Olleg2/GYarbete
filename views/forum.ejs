    <div class="artTitle"><h1>Add new article</h1></div>
    <div id="forumcontainer">
    <form action="/add-article" method="POST" enctype="multipart/form-data">
   
      <label for="title">Title of the article:</label><br>
      <input type="text" id="title" name="title" required><br><br>
      
     
      <label for="image">Upload an image fitting your title!</label><br>
      <input type="file" id="image" name="image" accept="image/*" class="file"><br><br>
      
      
      <button type="submit" id="submitbutt">Post article</button>
    </form>
  </div>

  
    <div class="artTitle"><h2>Articles</h2></div>
  <div id="articlecontainer">
    <ul>
      

      <div class="articles">
        <% articles.forEach((article, index) => { %>
          <div class="article">
            <h3><%= article.title %></h3>
            <% if (article.imageUrl) { %>
              <img src="<%= article.imageUrl %>" alt="<%= article.title %>">
            <% } %>
      
          
            <div class="comments">
              <h4>Comments:</h4>
              <% (article.comments || []).forEach(comment => { %>
                <p><strong><%= comment.username %>:</strong> <%= comment.text %></p>
              <% }) %>
      
            
              <form action="/add-comment" method="POST">
                <input type="hidden" name="articleIndex" value="<%= index %>">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required><br><br>
      
                <label for="text">Comment:</label>
                <textarea id="text" name="text" required></textarea><br><br>
      
                <button type="submit">Post Comment</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
  </ul>
</div>


